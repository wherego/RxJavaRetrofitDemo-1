<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTest"
        android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnOper"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTest"
        android:text="测试操作符"/>
    <Button
        android:id="@+id/btnRecyclerView"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnOper"
        android:layout_alignLeft="@id/btnOper"
        android:text="RecyclerViewComAdapter测试"/>
    <Button
        android:id="@+id/btnRefreshRecyclerView"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnRecyclerView"
        android:layout_alignLeft="@id/btnOper"
        android:text="分页RefRecyclerView测试"/>

</RelativeLayout>
